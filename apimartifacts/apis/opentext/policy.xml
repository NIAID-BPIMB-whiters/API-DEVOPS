<!--
    - Policies are applied in the order they appear.
    - Position <base/> inside a section to inherit policies from the outer scope.
    - Comments within policies are not preserved.
-->
<!-- Add policies as children to the <inbound>, <outbound>, <backend>, and <on-error> elements -->
<policies>
	<!-- Throttle, authorize, validate, cache, or transform the requests -->
	<inbound>
		<base />
		<get-authorization-context provider-id="otds-xdev-cc" authorization-id="otds-xdev-cc" context-variable-name="auth-context" identity-type="managed" ignore-error="false" />
		<choose>
			<when condition="@(context.Request.Headers.ContainsKey(&quot;OTCSTICKET&quot;))">
				<set-header name="OTCSTICKET" exists-action="override">
					<value>@(context.Request.Headers.GetValueOrDefault("OTCSTICKET"))</value>
				</set-header>
			</when>
			<otherwise>
				<set-header name="Authorization" exists-action="override">
					<value>@("Bearer " + ((Authorization)context.Variables.GetValueOrDefault("auth-context"))?.AccessToken)</value>
				</set-header>
			</otherwise>
		</choose>
		<set-backend-service base-url="https://edrms-xdev.niaid.nih.gov" />
	</inbound>
	<!-- Control if and how the requests are forwarded to services  -->
	<backend>
		<base />
	</backend>
	<!-- Customize the responses -->
	<outbound>
		<base />
	</outbound>
	<!-- Handle exceptions and customize error responses  -->
	<on-error>
		<base />
	</on-error>
</policies>